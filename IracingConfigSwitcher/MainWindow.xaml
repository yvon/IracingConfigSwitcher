<Window x:Class="IracingConfigSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IracingConfigSwitcher"
        mc:Ignorable="d"
        Title="Iracing config switcher" Height="130" Width="260">
    <Grid>
        <Label Content="{Binding LabelContent, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,10,0" FontSize="16" HorizontalAlignment="Center"/>
		<Button Content="{Binding ButtonContent}" Margin="10,40,10,10" FontSize="22" BorderThickness="2" Click="ButtonClick"/>
	</Grid>
</Window>
