<Window x:Class="IracingConfigSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IracingConfigSwitcher"
        mc:Ignorable="d"
        Title="Iracing config switcher" Height="110" Width="260" Icon="/Icon.ico" ResizeMode="NoResize">
    <Grid>
        <Label Content="{Binding LabelContent, UpdateSourceTrigger=PropertyChanged}" Margin="10,2,10,0" HorizontalAlignment="Center"/>
        <Button Content="{Binding ButtonContent}" Margin="10,27,10,10" FontSize="18" BorderThickness="2" Click="ButtonClick" Background="White" BorderBrush="#FF434343" Foreground="#FF434343" FontWeight="Bold"/>
    </Grid>
</Window>
